{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quicklink",
  "version": "1.0.0",
  "identifier": "icu.far1sh.app.quick-link",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Quick Link",
        "width": 900,
        "height": 600,
        "center": true,
        "decorations": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": {
      "windows": ["app"]
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["qlink"]
      }
    }
  }
}
